{
    "name": "zenstruck/callback",
    "description": "Callable wrapper to validate and inject arguments.",
    "homepage": "https://github.com/zenstruck/callback",
    "type": "library",
    "license": "MIT",
    "keywords": ["utility", "callback", "callable"],
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.2"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Zenstruck\\Callback\\Tests\\": "tests/" }
    }
}
